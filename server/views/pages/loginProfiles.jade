extends ../layouts/layout

block content
  h2 Third Party Profile(s)
  p.small
    if user.profiles.length !== 0
      each val in user.profiles
        h4= val.provider + ':'
        //p.small= JSON.stringify(val)
        case val.provider
          when "vkontakte"
            img(src="#{val.profile.photos[0].value}")
            p= val.profile.displayName
    else
      | NONE
  h2 Linked Account(s)
  ul.list-inline.list-unstyled
    li
      a.btn.btn-primary(href="/link/facebook") Link Facebook
    li
      a.btn.btn-primary(href="/link/google") Link Google
  p.small
    if user.accounts.length !== 0
      each val in user.accounts
        if val.profile.photos
          img(src="#{val.profile.photos[0].value}")
        h4= val.provider + ': ' + val.profile.displayName
        //code.small= JSON.stringify(val)
    else
      | NONE
